// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model Character {
  id             BigInt     @id @default(autoincrement())
  name           String
  created_at      DateTime   @default(now())
  img_payload     String?

  @@map("characters")
}